<h1>All Tasks</h1>

<ul>
  <% @tasks.each do |task|  %>
  <li>
    <%= link_to task.title, task_path(task) %>
    <input id="checkBox" type="checkbox">
    <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
  <%end %>
    <%= link_to "Add task", new_task_path, class:"btn btn-primary" %>
</ul>
